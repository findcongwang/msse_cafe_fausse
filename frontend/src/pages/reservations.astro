---
import Layout from '../layouts/Layout.astro';
import ReservationForm from '../components/ReservationForm.tsx';
const pageTitle = "Make a Reservation | Café Fausse";
---

<Layout title={pageTitle}>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">Make a Reservation</h1>
    
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6">
      <p class="text-gray-700 mb-6">
        Reserve your table at Café Fausse. For parties larger than 8, please call us directly at (202) 555-4567.
      </p>
      
      <ReservationForm client:load />
    </div>
  </main>
</Layout> 