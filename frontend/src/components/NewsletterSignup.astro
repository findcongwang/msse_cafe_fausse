<section class="bg-base-200 py-16">
  <div class="max-w-xl mx-auto text-center px-4">
    <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
    <p class="mb-8">Subscribe to our newsletter for special events, new menu items, and exclusive offers.</p>
    
    <form id="newsletter-form" class="form-control">
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <input
          type="email"
          placeholder="Enter your email"
          class="input input-bordered w-full sm:w-auto"
          required
        />
        <button type="submit" class="btn btn-primary w-full sm:w-auto">
          Subscribe
        </button>
      </div>
    </form>
  </div>
</section>

<script>
  const form = document.getElementById('newsletter-form');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = (form.querySelector('input[type="email"]') as HTMLInputElement).value;
    
    try {
      const response = await fetch('/api/newsletter', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email }),
      });
      
      if (response.ok) {
        alert('Thank you for subscribing!');
        (form as HTMLFormElement).reset();
      } else {
        throw new Error('Subscription failed');
      }
    } catch (error) {
      alert('Sorry, there was an error. Please try again later.');
    }
  });
</script> 