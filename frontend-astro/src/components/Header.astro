---
const navItems = [
  { href: '/menu', text: 'Menu' },
  { href: '/reservations', text: 'Reservations' },
  { href: '/about', text: 'About Us' },
  { href: '/gallery', text: 'Gallery' },
];
---

<header class="navbar bg-base-100/90 fixed top-0 z-50 backdrop-blur">
  <div class="navbar-start w-full">
    <div class="lg:hidden">
      <label for="nav-drawer" class="btn btn-square btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <a href="/" class="text-4xl monsieur-la-doulaise-regular mx-auto lg:mx-0">Caf√© Fausse</a>
  </div>
  <div class="navbar-end hidden lg:flex">
    <ul class="menu menu-horizontal">
      {navItems.map(item => (
        <li><a href={item.href} class="link link-hover">{item.text}</a></li>
      ))}
    </ul>
  </div>
</header>

<div class="drawer">
  <input id="nav-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-side z-50">
    <label for="nav-drawer" class="drawer-overlay"></label>
    <ul class="menu p-4 w-80 min-h-full bg-base-200">
      {navItems.map(item => (
        <li><a href={item.href}>{item.text}</a></li>
      ))}
    </ul>
  </div>
</div> 