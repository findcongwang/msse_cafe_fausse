---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<div class="w-full">
		<div class="w-full">
			<Header />
			<main class="m-0">
				<div class="w-full relative">
					<Hero />
				</div>
				<section class="w-full">
					<div class="w-full text-center py-16 px-4">
						<h2 class="text-3xl font-bold mb-8">Hours & Location</h2>
						<p class="mb-2">1234 Culinary Ave, Suite 100, Washington, DC 20002</p>
						<p class="mb-2">(202) 555-4567</p>
						<div class="divider max-w-xs mx-auto"></div>
						<div class="w-full mt-4">
							<p>Monday–Saturday: 5:00 PM – 11:00 PM</p>
							<p>Sunday: 5:00 PM – 9:00 PM</p>
						</div>
					</div>
				</section>
				<NewsletterSignup />
			</main>
			<Footer />
		</div>
	</div>
</Layout>
